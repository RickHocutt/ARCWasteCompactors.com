---
layout: base.njk
title: Waste & Recycling Equipment
name: Products
---
<main id="main" class="bg-gray-100">
    <div class="container py-6">
        <h1 class="text-4xl">Waste &amp; Recycling Equipment</h1>

        <div class="flex flex-wrap justify-center my-6 lg:-mx-4">
            {% for product in products %}
            <div class="w-full mb-4 lg:w-1/2 lg:px-4 text-gray-900">
                <div class="h-full flex flex-col bg-white rounded-lg overflow-hidden shadow-md">
                    <div class="text-center overflow-hidden">
                    <img src="/static/product-images/{{ product.image }}">
                    </div>

                    <div class="flex flex-col flex-grow space-y-4 justify-between px-4 py-4">
                        <div>
                            <h2 class="text-3xl mb-2">{{ product.name }}</h2>
                            <p class="text-base">{{ product.description }}</p>
                        </div>
                        <div>
                            <h3 class="text-xl">Applications</h3>
                            {% for application in product.applications %}
                            <span class="rounded-full mr-2 my-2 px-2 py-1 bg-secondary inline-block text-sm">{{ application }}</span>
                            {% endfor %}
                        </div>
                        <div class="text-center">
                            <a href="/request-info?product={{product.name}}" class="button">Request Info</a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</main>